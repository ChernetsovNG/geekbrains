<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.geekbrains.client.Controller">
    <top>
        <HBox fx:id="authPanel">
            <TextField fx:id="authLogin" promptText="Логин" HBox.hgrow="ALWAYS" />
            <PasswordField fx:id="authPass" onAction="#sendAuth" promptText="Пароль" />
            <Button onAction="#sendAuth" text="Авторизоваться" />
        </HBox>
    </top>
    <right>
        <ListView fx:id="clientsList" prefWidth="200" visible="false" />
    </right>
    <bottom>
        <HBox fx:id="bottomPanel">
         <children>
            <TextArea fx:id="clientTerminal" prefHeight="100.0" prefWidth="1053.0" />
         </children></HBox>
    </bottom>
   <center>
      <TableView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn prefWidth="392.0" text="Name" />
          <TableColumn minWidth="3.0" prefWidth="224.0" text="Size" />
            <TableColumn prefWidth="207.0" text="Modify time" />
        </columns>
      </TableView>
   </center>
</BorderPane>
